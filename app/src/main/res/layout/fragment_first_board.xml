<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.welcome.onboard.fragments.FirstBoardFragment">

    <ImageView
        android:id="@+id/ivFirstBoard"
        android:layout_width="355dp"
        android:layout_height="355dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/first_board"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitleFirstBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Tampil Beda, Tampil Bersih"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFirstBoard"/>

    <TextView
        android:id="@+id/tvMessageFirstBoard"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Daur ulang hari ini untuk hari esok yang lebih baik bersama Recob!"
        android:textSize="18sp"
        android:textColor="@color/grey_dark"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleFirstBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>