<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sage"
    tools:context=".ui.menu.recycle.checkout.ValidationActivity">

    <ImageView
        android:id="@+id/ivValidation"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline1a"
        app:layout_constraintEnd_toStartOf="@+id/guideline1b"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/pic_friendly"/>

    <TextView
        android:id="@+id/tvTitleValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menunggu Validasi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivValidation"
        app:layout_constraintStart_toEndOf="@+id/guideline1a"
        app:layout_constraintEnd_toStartOf="@+id/guideline1b"/>

    <TextView
        android:id="@+id/tvDescValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabunganmu segera diproses"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleValidate"
        app:layout_constraintStart_toEndOf="@+id/guideline1a"
        app:layout_constraintEnd_toStartOf="@+id/guideline1b"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Kembali ke Beranda"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_shape_border_bold"
        app:layout_constraintStart_toEndOf="@id/guideline1a"
        app:layout_constraintEnd_toStartOf="@id/guideline1b"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--Guideline-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>